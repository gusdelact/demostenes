CREATE TABLE CNBV_TIP_REQ
(
  TIPO_OFICIO   VARCHAR2(2 BYTE)                NOT NULL,
  ID_TIP_REQ    VARCHAR2(8 BYTE)                NOT NULL,
  DESC_TIP_REQ  VARCHAR2(80 BYTE),
  FH_ALTA       DATE,
  CVE_USU_ALTA  VARCHAR2(8 BYTE),
  FH_ULT_MOD    DATE,
  CVE_USU_MOD   VARCHAR2(8 BYTE)
);

COMMENT ON COLUMN CNBV_TIP_REQ.ID_TIP_REQ IS 'Identificador del tipo de requerimiento';
COMMENT ON COLUMN CNBV_TIP_REQ.DESC_TIP_REQ IS 'Descripción del tipo de requerimiento';

ALTER TABLE CNBV_TIP_REQ ADD (
  CONSTRAINT CNBV_TIP_REQ_PK
 PRIMARY KEY
 (TIPO_OFICIO, ID_TIP_REQ));
