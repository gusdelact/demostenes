CREATE TABLE CNBV_DIRECCIONES
(
  ID_CONFIG_DIR   NUMBER(4)                     NOT NULL,
  TIPO_OFICIO     VARCHAR2(2 BYTE)              NOT NULL,
  TX_DIRECCION    VARCHAR2(100 BYTE),
  TX_GERENCIA     VARCHAR2(100 BYTE),
  TX_SUBGERENCIA  VARCHAR2(100 BYTE),
  TX_ATN_NOMBRE   VARCHAR2(100 BYTE),
  TX_ATN_PUESTO   VARCHAR2(100 BYTE),
  SIT_CONFIG_DIR  VARCHAR2(2 BYTE)              NOT NULL,
  NIVEL           NUMBER(2),
  FH_ALTA         DATE                          NOT NULL,
  CVE_USU_ALTA    VARCHAR2(8 BYTE)              NOT NULL,
  FH_ULT_MOD      DATE,
  CVE_USU_MOD     VARCHAR2(8 BYTE)
);

COMMENT ON COLUMN CNBV_DIRECCIONES.ID_CONFIG_DIR IS 'ID de la configuración';
COMMENT ON COLUMN CNBV_DIRECCIONES.TIPO_OFICIO IS 'Tipo de Oficio';
COMMENT ON COLUMN CNBV_DIRECCIONES.TX_DIRECCION IS 'Nombre de la dirección que emite el oficio de la CNBV';
COMMENT ON COLUMN CNBV_DIRECCIONES.TX_GERENCIA IS 'Nombre de la gerencia que emite el oficio de la CNBV';
COMMENT ON COLUMN CNBV_DIRECCIONES.TX_SUBGERENCIA IS 'Nombre de la subgerencia que emite el oficio de la CNBV';
COMMENT ON COLUMN CNBV_DIRECCIONES.TX_ATN_NOMBRE IS 'Nombre de la persona que emite el oficio de la CNBV';
COMMENT ON COLUMN CNBV_DIRECCIONES.TX_ATN_PUESTO IS 'Puesto de la persona que emite el oficio de la CNBV';
COMMENT ON COLUMN CNBV_DIRECCIONES.SIT_CONFIG_DIR IS 'Situación AC - Activo o IN - Inactivo';
COMMENT ON COLUMN CNBV_DIRECCIONES.NIVEL IS 'Nivel de jerarquía en las direcciones';
COMMENT ON COLUMN CNBV_DIRECCIONES.FH_ALTA IS 'Fecha y Hora de Registro';
COMMENT ON COLUMN CNBV_DIRECCIONES.CVE_USU_ALTA IS 'Usuario que registra';
COMMENT ON COLUMN CNBV_DIRECCIONES.FH_ULT_MOD IS 'Fecha y Hora de Última Modificación';
COMMENT ON COLUMN CNBV_DIRECCIONES.CVE_USU_MOD IS 'Usuario que realiza la Última Modificación';

ALTER TABLE CNBV_DIRECCIONES ADD (
  CONSTRAINT CNBV_DIRECCIONES_PK
 PRIMARY KEY
 (ID_CONFIG_DIR));
