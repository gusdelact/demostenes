CREATE TABLE CNBV_BIT_SEGUIMIENTO
(
  NUM_OFICIO     VARCHAR2(30 BYTE)              NOT NULL,
  TIPO_OFICIO    VARCHAR2(2 BYTE)               NOT NULL,
  CLAVE_ESTATUS  VARCHAR2(8 BYTE)               NOT NULL,
  FH_REGISTRO    DATE,
  CLAVE_USUARIO  VARCHAR2(8 BYTE)
);

ALTER TABLE CNBV_BIT_SEGUIMIENTO ADD (
  CONSTRAINT CNBV_BIT_SEGUIMIENTO_PK
 PRIMARY KEY
 (NUM_OFICIO, TIPO_OFICIO, CLAVE_ESTATUS));


ALTER TABLE CNBV_BIT_SEGUIMIENTO ADD (
  CONSTRAINT CNBV_BIT_SEGUIMIENTO_FKESTATUS 
 FOREIGN KEY (CLAVE_ESTATUS) 
 REFERENCES CNBV_ESTATUS_SEG (CVE_ESTATUS));

ALTER TABLE CNBV_BIT_SEGUIMIENTO ADD (
  CONSTRAINT CNBV_BIT_SEGUIMIENTO_FK_OFICIO 
 FOREIGN KEY (NUM_OFICIO, TIPO_OFICIO) 
 REFERENCES CNBV_OFICIO (NUM_OFICIO,TIPO_OFICIO));
